@model EStore.Models.AdminDashboard
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/_LayoutPageAdmin.cshtml";
}

<main>
    <div class="custom-card container-fluid py-4 bg-light">
        <h2 class="text-center ">Dashboard</h2>
        <!-- Row -->
        <div class="custom-card-inner mt-2">
            <div class="p-3 row">
                <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Gross Sales</p>
                                        <h5 class="font-weight-bolder">
                                            $@Model.GrossSalesAmount
                                        </h5>
                                    </div>
                                </div>
                                <div class="col-4 text-end">
                                    <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle">
                                        <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Current Users</p>
                                        <h5 class="font-weight-bolder">
                                            @Model.TotalLoggedUsers
                                        </h5>
                                    </div>
                                </div>
                                <div class="col-4 text-end">
                                    <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                                        <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Products Sold</p>
                                        <h5 class="font-weight-bolder">
                                            +@Model.TotalProductsSold
                                        </h5>
                                    </div>
                                </div>
                                <div class="col-4 text-end">
                                    <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                                        <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Users</p>
                                        <h5 class="font-weight-bolder">
                                            +@Model.TotalUsers
                                        </h5>
                                    </div>
                                </div>
                                <div class="col-4 text-end">
                                    <div class="icon icon-shape bg-gradient-warning shadow-warning text-center rounded-circle">
                                        <i class="ni ni-cart text-lg opacity-10" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Row -->
            <div class="px-3 row">
                <!--Weekly Sales -->
                <div class="col-xl-3 col-sm-6">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Sales Amount</p>
                                        <h5 class="font-weight-bolder">
                                            $@Model.WSalesAmount
                                        </h5>
                                        <p class="mb-0">
                                            @{
                                                if (Model.WVSalesAmount < 0)
                                                {
                                                    <span class="text-danger text-sm font-weight-bolder">@Model.WVSalesAmount%</span>
                                                }
                                                else
                                                {
                                                    <span class="text-success text-sm font-weight-bolder">+@Model.WVSalesAmount%</span>
                                                }
                                            }

                                            since last week
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--Weekly Sales -->
                <div class="col-xl-3 col-sm-6">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Product Sold</p>
                                        <h5 class="font-weight-bolder">
                                            +@Model.WProductsSold
                                        </h5>
                                        <p class="mb-0">
                                            @{
                                                if (Model.WVProductsSold < 0)
                                                {
                                                    <span class="text-danger text-sm font-weight-bolder">@Model.WVProductsSold%</span>
                                                }
                                                else
                                                {
                                                    <span class="text-success text-sm font-weight-bolder">+@Model.WVProductsSold%</span>
                                                }
                                            }

                                            since last week
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Weekly Products Addition -->
                <div class="col-xl-3 col-sm-6">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">New Products</p>
                                        <h5 class="font-weight-bolder">
                                            +@Model.WProductsAddition
                                        </h5>
                                        <p class="mb-0">
                                            @{
                                                if (Model.WVProductsAddition < 0)
                                                {
                                                    <span class="text-danger text-sm font-weight-bolder">
                                                        @Model.WVProductsAddition%
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-success text-sm font-weight-bolder">
                                                        +@Model.WVProductsAddition%
                                                    </span>
                                                }
                                            }
                                            since last week
                                        </p>
                                    </div>
                                </div>
                                <!--Icons -->
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Weekly User Addition -->
                <div class="col-xl-3 col-sm-6">
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-8">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-uppercase font-weight-bold">User Addition</p>
                                        <h5 class="font-weight-bolder">
                                            +@Model.WUsersAddition
                                        </h5>
                                        <p class="mb-0">
                                            @{
                                                if (Model.WVUsersAddition < 0)
                                                {
                                                    <span class="text-danger text-sm font-weight-bolder">
                                                        @Model.WVUsersAddition%
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-success text-sm font-weight-bolder">
                                                        +@Model.WVUsersAddition%
                                                    </span>
                                                }
                                            }
                                            since last week
                                        </p>
                                    </div>
                                </div>
                                <div class="col-4 text-end">
                                    <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                                        <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Row -->
            <div class="m-1 py-2 row">
                <div class="col-12">
                    <div class="card mb-2 mt-2">
                        <div class="card-title bg-white mt-3 ml-2 md-0">
                            <h5>Product Sales</h5>
                        </div>
                        <div class="card-body px-0 pt-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0">
                                    <thead class="">
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Category</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2 align-middle text-center text-sm">Total Products</th>
                                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Total Sales Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-borderless">
                                        @for (int i = 0; i < Model.CategoryCount.Count; i++)
                                        {
                                            <tr>
                                                <td class="text-black text-xxl-start">
                                                    @Model.ProductCategories[i]
                                                </td>
                                                <td class="align-middle text-center text-sm">
                                                    @Model.CategoryCount[i]
                                                </td>
                                                <td class="align-middle text-center text-sm">
                                                    @Model.TotalCost[i]
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>